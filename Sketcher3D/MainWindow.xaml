<Window x:Class="Sketcher3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sketcher3D"
        Width="900"
        Height="600">

    <DockPanel>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
        </Menu>

        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="5">

            <Button Content="Cuboid"  Click="Cuboid_Click"  Margin="2"/>
            <Button Content="Cube"    Click="Cube_Click"    Margin="2"/>
            <Button Content="Cone"    Click="Cone_Click"    Margin="2"/>
            <Button Content="Sphere"  Click="Sphere_Click"  Margin="2"/>
            <Button Content="Cylinder" Click="Cylinder_Click" Margin="2"/>
            <Button Content="Pyramid" Click="Pyramid_Click" Margin="2"/>

        </StackPanel>

        <!-- Viewport -->
        <Canvas x:Name="Viewport"
                Background="White"
                MouseDown="Viewport_MouseDown"
                MouseMove="Viewport_MouseMove"
                MouseUp="Viewport_MouseUp"/>

    </DockPanel>
</Window>
